{{#if error}}
  <p style="color: red;">
    Please complete all fields
  </p>
{{/if}}

{{#pub}}
  <h2>Subscribe to {{title}}</h2>

  <form action="/{{_id}}/subscribe" method="post">
    <div class="formrow">
      <label for="name">Name</label>
      <input type="text" required name="name">
    </div>
{{#if medium="physical"}}
    <div class="formrow">
      <label for="address">Address</label>
      <input type="address" required name="email">
    </div>
{{/if}}
{{#if medium="electronic"}}
    <div class="formrow">
      <label for="address">Address</label>
      <input type="address" required name="email">
    </div>
{{/if}}
    <div class="formrow">
      <label for=""></label>
      <input type="submit" value="Subscribe">
      <a href="/">cancel</a>
    </div>
  </form>
{{/pub}}
